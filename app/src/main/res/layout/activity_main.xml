<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.oskarpolak.lekcja13.MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nagrywaj!"
        android:id="@+id/record"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/play" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop nagrywanie"
        android:id="@+id/stopRecord"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OdtwÃ³rz"
        android:id="@+id/play"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/stopRecord"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zatrzymaj"
        android:id="@+id/stopPlay"
        android:layout_below="@+id/play"
        android:layout_alignStart="@+id/play"
        android:layout_alignEnd="@+id/play" />
</RelativeLayout>
